@model LoginModel
<style>
body{
  font-family: 'Open Sans', sans-serif;
 
  width:100%; 
  text-align:center;
  margin: 20px 0 20px 0;   
}
</style>

<h2>Enter</h2>
 <body>

 
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
    <div>
        <div class="form-group">
           
            <input type="text" asp-for="Email" placeholder="Email" />
            <span asp-validation-for="Email" />
           
        </div>
        <div class="form-group">
           
            <input asp-for="Password" placeholder="Password" />
            <span asp-validation-for="Password" />
             
        </div>
        <div>
              @Html.ValidationMessageFor(model => model.Email)
        </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Enter" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
<a asp-action="Register" asp-controller="Account">Registration</a>
</body>
@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}