@model RegisterModel
<style>
body{
  font-family: 'Open Sans', sans-serif;
 
  width:100%; 
  text-align:center;
  margin: 20px 0 20px 0;   
}
</style>

<h2>Registration</h2>
<body>
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"/>
    <div>

        <div>
            <label asp-for="FirstName">Enter first name</label><br/>
            <input type="text" asp-for="FirstName"/>
            <span asp-validation-for="FirstName"/>
        </div>
        <div>
            <label asp-for="LastName">Enter last name</label><br/>
            <input type="text" asp-for="LastName"/>
            <span asp-validation-for="LastName"/>
        </div>
        <div>
            <label asp-for="Email">Enter email</label><br/>
            <input type="text" asp-for="Email"/>
            <span asp-validation-for="Email"/>
        </div>
        <div>
            <label asp-for="Role">Enter role</label><br/>
            <input type="text" asp-for="Role"/>
            <span asp-validation-for="Role"/>
        </div>
        <div>
            <label asp-for="Password">Enter password</label><br/>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Confirm password</label><br/>
            <input asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"/>
        </div>
        <div style="padding: 15px">
            <input type="submit" value="Registration" style="padding: 7px"/>
        </div>
    </div>
</form>
</body>
@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}